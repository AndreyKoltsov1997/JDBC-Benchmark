pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-s .m2/settings.xml --batch-mode'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean compile -DskipTests  assembly:single package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deploy') {
        when {
            branch 'master'
        }
            steps {
                sh 'mvn $MAVEN_CLI_OPTIONS deploy'
            }
        }
    }
}
